<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <!-- Latest compiled and minified CSS -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">

    <!-- jQuery library -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>

    <!-- Popper JS -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>

    <!-- Latest compiled JavaScript -->
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    
    <link rel="stylesheet" href="/stylesheets/review.css">
    <title>Review</title>
</head>
    <body class="bg-dark">
        <header class="nav-bar">
            <div class="container-fluid">
               <nav class="navbar navbar-expand-sm bg-dark justify-content-between">
                   <a class="navbar-brand"  href="/">
                       <img src="/site_data/images/Gamekart-logos_white.png" alt="Logo" style="width: 200px; height: 50px;">
                   </a>
               </nav>
            </div>
        </header> 
        <div class="container-fluid">
            <div class="row text-white">
                
                <div class="col-3 border border-white text-center" id="abtGame">    
                    <h2 style="font-weight:bold;font-size:50px; padding-top: 50px;"><%= game.name %></h2><br><br><br><br>
                    <form action="/review" method="post">
                        <input type="text" name="gameID" value="<%= game._id %>" hidden>
                        <input type="text" name="title" placeholder="Review Title"><br><br><br>
                        <textarea name="review" placeholder="Review"></textarea><br><br>
                        <button class="btn btn-primary" type="submit" style="font-size: 20px;">Submit</button>
                    </form>
                </div>
                
                
                 
                <div class="col-9 border border-white">
                    <div id="demo" class="carousel slide" data-ride="carousel">
            
                        <!-- Indicators -->
                        <ul class="carousel-indicators">
                            <li data-target="#demo" data-slide-to="0" class="active"></li>
                            <li data-target="#demo" data-slide-to="1"></li>
                            <li data-target="#demo" data-slide-to="2"></li>
                        </ul>
                        
                        
                        <!-- The slideshow -->
                        <div class="carousel-inner justify-content-center ">
                            <div class="carousel-item active">
                                <img src="<%= gamePoster %>" style="width:100%; height: 950px !important;">
                            </div>
                            <% gameImage.forEach((image)=>{ %>
                                <div class="carousel-item">
                                    <img src="<%= image %>" style="width:100%; height: 950px !important;">
                                </div>
                            <%})%>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </body>
</html>