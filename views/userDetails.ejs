<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

     <!-- Latest compiled and minified CSS -->
     <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">

     <!-- jQuery library -->
     <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
 
     <!-- Popper JS -->
     <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
 
     <!-- Latest compiled JavaScript -->
     <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
     
     <link rel="stylesheet" href="/stylesheets/txHistory.css">

    
    <title>User Details</title>

</head>

<body>
    <header class="nav-bar">
        <div class="container-fluid">
            <nav class="navbar navbar-expand-sm bg-dark justify-content-between">
                <a class="navbar-brand"  href="/">
                    <img src="/site_data/images/Gamekart-logos_white.png" alt="Logo" style="width: 200px; height: 50px;">
                </a>
                <!-- <ul class="navbar-nav">
                  <li class="nav-item">
                    <div class="btn-group btn-group-lg">
                        <a href="/home" onclick=logout() class="btn btn-primary" role="button">Logout</a>
                    </div>
                  </li>
                </ul> -->
            </nav>
         </div>
    </header>
    <section class="main">
        <div class="container border text-center text-white bg-dark " style="padding: 30px;">
            <h2><b>Registered Users</b></h2>
            <div class="container border" style="height: 700px; padding: 20px;overflow-y: auto; border-radius: 20px;">
                <table class="table text-white">
                    <thead>
                      <tr>
                        <th scope="col">#</th>
                        <th scope="col">Name</th>
                        <th scope="col">Username</th>
                        <th scope="col">Admin</th>
                        <th scope="col">Email</th>
                      </tr>
                    </thead>
                    <tbody>
                      <% let i = 1 %>
                      <% data.forEach((user) =>{ %>
                        <tr>
                          <th scope="row"><%= i %></th>
                          <td><%= user.name %></td>
                          <td><%= user.userName %></td>
                          <td><%= user.admin == true ? 'yes' : 'no'  %></td>
                          <td><%= user.email  %></td>
                        </tr>
                        <% ++i %>
                      <% }) %>                     
                    </tbody>
                  </table>
            </div>
            <br>
            
    </section>    
</body>
</html>